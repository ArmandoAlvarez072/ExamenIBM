<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExamenIBM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorOnPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorOnPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryLight</item>

        <item name="colorSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryVariant">@color/colorOnSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryLight</item>

        <item name="android:statusBarColor">@color/colorOnPrimaryDark</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>


    <style name="ButtonOk" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/bold_font_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/font_size_btn</item>
    </style>

    <style name="ButtonCancel" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/red_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/font_size_btn</item>
    </style>

    <style name="TextViewSubtitle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/bold_font_color</item>
        <item name="android:textSize">@dimen/font_size_subtitle</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>


    <style name="TextViewTitle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/bold_font_color</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="TextViewBody" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="TextViewBodyBold" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>
</resources>